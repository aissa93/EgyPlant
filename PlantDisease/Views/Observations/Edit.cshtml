@model PlantDisease.Models.ObservationSheet

@{
    ViewBag.Title = "Edit";
}

<h2>@Model.ObservationName</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table class="table">

        @for (int i=0;i<20;i++) {
        <tr>
            
            <th>
                Day
            </th>
           @foreach (var item in ViewBag.SheetFactors)
           {

            <th>
                @item.FactorName
            </th>
           }

            <th>
               Disease Value
            </th>
            <th>
                Is Diseased
            </th>
            @*<th></th>*@
        </tr>


            <tr>
                <td>
                    @DateTime.Now.Date.AddDays(i);
                </td>

                @foreach (var item in ViewBag.SheetFactors)
                {

                    <td>
                        @Html.TextBox("fac")
                    </td>
                }
                <td>
                   

                </td>
                <td></td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })

                    </td>*@
                



            </tr>

        }

        </table>

}

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

